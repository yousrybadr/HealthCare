<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yousry.healthcareapp.CreateClinicActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blue1"
            android:id="@+id/frame1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/wallet_holo_blue_light"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:text="Adding New Clinics :"/>

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:background="@color/blue"
            android:layout_below="@+id/frame1">

        </View>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/frame1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/frame1"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/wallet_holo_blue_light">

                    <EditText
                        android:id="@+id/createClinic_editText_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name of Clinic"
                        android:textColor="@color/blue1"
                        android:textColorHint="@color/wallet_holo_blue_light"
                        android:imeOptions="actionUnspecified"
                        android:inputType="text"
                        android:maxLines="3"
                        android:singleLine="false" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/wallet_holo_blue_light">

                    <EditText
                        android:id="@+id/createClinic_editText_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description"
                        android:textColor="@color/blue1"
                        android:textColorHint="@color/wallet_holo_blue_light"
                        android:imeOptions="actionUnspecified"
                        android:inputType="text"
                        android:maxLines="3"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/wallet_holo_blue_light">

                    <EditText
                        android:id="@+id/createClinic_editText_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone number"
                        android:textColor="@color/blue1"
                        android:textColorHint="@color/wallet_holo_blue_light"
                        android:imeOptions="actionUnspecified"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/wallet_holo_blue_light">

                    <EditText
                        android:id="@+id/createClinic_editText_startTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Start Time"
                        android:textColor="@color/blue1"
                        android:textColorHint="@color/wallet_holo_blue_light"
                        android:imeOptions="actionUnspecified"
                        android:inputType="time"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/wallet_holo_blue_light"
                    >

                    <EditText
                        android:id="@+id/createClinic_editText_endTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="End Time"
                        android:textColor="@color/blue1"
                        android:textColorHint="@color/wallet_holo_blue_light"
                        android:imeOptions="actionUnspecified"
                        android:inputType="time"
                        android:maxLines="1"
                        android:singleLine="true" />


                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/createClinic_textView_address"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/wallet_holo_blue_light"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:text="Your Address"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/createClinic_button"
                    android:textColorHighlight="@color/orange"
                    android:textColor="@color/wallet_holo_blue_light"
                    android:background="@color/blue1"
                    android:text="Done"
                    android:textStyle="bold"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/createClinic_fab_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:tint="@color/red"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_dialog_map"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/wallet_holo_blue_light"
        app:fabSize="normal"/>


</RelativeLayout>
